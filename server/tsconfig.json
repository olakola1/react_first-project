{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",  // Должно быть commonjs для Node.js
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}